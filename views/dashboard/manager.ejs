<%- include('../layout', { title: 'Manager Dashboard' }) %>

<main>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="text-center mb-0">Manager Dashboard</h1>
                    
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Miresevjen, <%= user.username %></h5>
                        <p class="card-text">Jeni i kycur si menaxher.</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Menaxho menune</h5>
                                        <p class="card-text">Perditeso cmimet dhe artikujt</p>
                                        <a href="/dashboard/manager/menu" class="btn btn-primary">Menaxho Menu</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Shih rezervimet</h5>
                                        <p class="card-text">Shih dhe menaxho rezervimet</p>
                                        <a href="/dashboard/manager/reservations" class="btn btn-primary">Shih rezervimet</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Staff Management</h5>
                                        <p class="card-text">Manage staff schedules and roles.</p>
                                        <a href="/dashboard/manager/staff" class="btn btn-primary">Staff Management</a>
                                    </div>
                                </div>
                            </div>

                            <form action="/auth/logout" method="POST" class="mb-0">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
.card {
    background-color: var(--primary-color);
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
}

.card-title {
    color: var(--accent-color);
}

.btn-primary {
    background-color: var(--accent-color);
    border: none;
    color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-color);
    color: var(--accent-color);
    border: 1px solid var(--accent-color);
}
</style> 