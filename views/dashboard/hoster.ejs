<%- include('../layout', { title: 'Hoster Dashboard' }) %>

<main>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="text-center mb-0">Hoster Dashboard</h1>
                    <form action="/auth/logout" method="POST" class="mb-0">
                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Welcome, <%= user.username %></h5>
                        <p class="card-text">You are logged in as a hoster.</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Manage Reservations</h5>
                                        <p class="card-text">View and manage current reservations.</p>
                                        <a href="/dashboard/hoster/reservations" class="btn btn-primary">Manage Reservations</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Table Management</h5>
                                        <p class="card-text">View and update table status.</p>
                                        <a href="/dashboard/hoster/tables" class="btn btn-primary">Table Management</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
.card {
    background-color: var(--primary-color);
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
}

.card-title {
    color: var(--accent-color);
}

.btn-primary {
    background-color: var(--accent-color);
    border: none;
    color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-color);
    color: var(--accent-color);
    border: 1px solid var(--accent-color);
}
</style> 