<%- include('../layout', { title: 'Admin Dashboard' }) %>

<main>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="text-center mb-0">Admin Dashboard</h1>
                    
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Welcome, <%= user.username %></h5>
                        <p class="card-text">You are logged in as an administrator.</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Manage Users</h5>
                                        <p class="card-text">View and manage all user accounts.</p>
                                        <a href="/dashboard/admin/users" class="btn btn-primary">Manage Users</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">View Reports</h5>
                                        <p class="card-text">Access system reports and analytics.</p>
                                        <a href="/dashboard/admin/reports" class="btn btn-primary">View Reports</a>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">System Settings</h5>
                                        <p class="card-text">Configure system-wide settings.</p>
                                        <a href="/dashboard/admin/settings" class="btn btn-primary">Settings</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <form action="/auth/logout" method="POST" class="mb-0">
                            <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
.card {
    background-color: var(--primary-color);
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
}

.card-title {
    color: var(--accent-color);
}

.btn-primary {
    background-color: var(--accent-color);
    border: none;
    color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-color);
    color: var(--accent-color);
    border: 1px solid var(--accent-color);
}
</style> 
